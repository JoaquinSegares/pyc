---
const navItems = [
  { name: 'Art√≠culos', href: '#articulos' },
  { name: 'Parches', href: '#parches' },
  { name: 'Precios', href: '#precios' },
  { name: 'Compra y Contacto', href: '#contactanos' },
];
---

<head>
  <!-- Include the JavaScript files -->
  <script src="/scripts/menu-toggle.js" defer></script>
  <script src="/scripts/smooth-scroll.js" defer></script>
  <style>
    /* Apply smooth scrolling to the whole document */
    html {
      scroll-behavior: smooth;
    }
  </style>
</head>

<header class="bg-[#ff8fab] text-white py-2 fixed left-0 top-0 right-0 z-50">
  <div class="container mx-auto flex justify-between items-center px-4">
    <!-- Adjust the logo size to fit the header -->
    <img class="h-12" src="src/images/logo_p&c blanco.png" alt="Logo">

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex space-x-4 items-center text-sm md:text-base">
      {navItems.map(item => (
        <a href={item.href} class="hover:scale-110 hover:bg-gray-100 hover:text-[#ff8fab] transition-transform duration-300 ease-in-out px-2 py-1 rounded font-bold">
          {item.name}
        </a>
      ))}
    </nav>

    <!-- Mobile Menu Button -->
    <button id="menu-button" class="md:hidden text-white">
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Navigation Menu -->
  <nav id="nav-menu" class="md:hidden hidden bg-[#ff8fab] py-2">
    <ul class="flex flex-col space-y-2 items-center">
      {navItems.map(item => (
        <li>
          <a href={item.href} class="block hover:scale-110 hover:bg-gray-100 hover:text-[#ff8fab] transition-transform duration-300 ease-in-out px-4 py-2 rounded font-bold">
            {item.name}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>
